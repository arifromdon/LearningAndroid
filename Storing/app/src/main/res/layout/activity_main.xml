<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res-auto"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:layout_width="match_parent"
    android1:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android1:orientation="vertical">

    <TextView
        android1:id="@+id/textview"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        tools:text="here will be our text"
        android1:textSize="30sp"/>

    <EditText
        android1:id="@+id/edittext"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content" />

    <Button
        android1:id="@+id/apply_text_button"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:text="Apply Text"
        android1:layout_gravity="center_horizontal"/>

    <Switch
        android1:id="@+id/switch1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_gravity="center_horizontal"/>

    <Button
        android1:id="@+id/save_button"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:text="save data"
        android1:layout_gravity="center_horizontal"/>

</LinearLayout>